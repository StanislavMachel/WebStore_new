@model WebStore.WebUI.Models.ImageViewModel

@{
    ViewBag.Title = "Upload image";
}

<script>
    debugger;
    $(document).ready(function () {
        
        $('#ImageUpload').change(function () {
            $('#imageCover').val($(this).val());
        })
    });
</script>

<h2>Upload image</h2>


@using (Html.BeginForm("Create", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group ">
            @Html.ValidationSummary()
            <div class="form-group left">

                    @Html.LabelFor(m => m.Title, htmlAttributes: new { @class = "control-label col-sm-2" })

                    <div class="col-sm-10">
                        @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
            
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.AltText, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(m => m.AltText, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Caption, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(m => m.Caption, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ImageUpload, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(m => m.ImageUpload,  htmlAttributes: new { type = "file", style= "display:none;" })
                    <div class="input-append">
                        <input id="imageCover" class="input-large" type="text">
                        <a class="btn" onclick="$('#ImageUpload').click();">Browse</a>
                    </div>

                </div>
            </div>
            <div class="form-group">     
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>



}





